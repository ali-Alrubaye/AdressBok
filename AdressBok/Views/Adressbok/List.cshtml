
@model IEnumerable<AdressBokRepositories.Models.AdressBok>

<div class="container">
    <div class="row">
        <div id="divdetalis" class="col-lg-12 text-left"></div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefonnummer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateAd)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefonnummer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateAd)
            </td>
            <td>
                @Ajax.ActionLink("Edit", "Edit", new { id = item.Id }, new AjaxOptions()
       {
           HttpMethod = "GET",
           UpdateTargetId = "divdetalis",
           InsertionMode = InsertionMode.Replace
       }) |
                @Ajax.ActionLink("Details", "Details", new { id = item.Id }, new AjaxOptions()
       {
           HttpMethod = "POST",
           UpdateTargetId = "divdetalis",
           InsertionMode = InsertionMode.Replace
       }) |
                @Ajax.ActionLink("Delete", "Delete", new { id = item.Id }, new AjaxOptions()
       {
           HttpMethod = "POST",
           UpdateTargetId = "showList",
           InsertionMode = InsertionMode.Replace
       })
            </td>
        </tr>
    }

</table>
